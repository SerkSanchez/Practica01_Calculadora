<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.30"
        android:orientation="vertical"
        android:weightSum="1">

        <EditText
            android:id="@+id/etiquetaAddNumeros"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="number"
            android:gravity="right|center_vertical"
            android:layout_weight="0.70"
            android:hint="0"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/etiquetaShowNumeros"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.30"
            android:gravity="right|center_vertical"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.70"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.60"
            android:orientation="vertical"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                android:background="@color/colorOperations"
                android:weightSum="1">
                <Button
                    android:id="@+id/btnResto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/colorOperations"
                    android:text="%"
                    android:textSize="40sp"/>
                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/colorOperations"
                    android:text="AC"
                    android:textSize="40sp"/>
                <Button
                    android:id="@+id/btnDel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/colorOperations"
                    android:text="Del"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                android:weightSum="1">
                <Button
                    android:id="@+id/btn7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/colorNumbers"
                    android:text="7"
                    android:textSize="40sp"/>
                <Button
                    android:id="@+id/btn8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/colorNumbers"
                    android:text="8"
                    android:textSize="40sp"/>
                <Button
                    android:id="@+id/btn9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/colorNumbers"
                    android:text="9"
                    android:textSize="40sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                android:weightSum="1">
                <Button
                    android:id="@+id/btn4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/colorNumbers"
                    android:text="4"
                    android:textSize="40sp"/>
                <Button
                    android:id="@+id/btn5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/colorNumbers"
                    android:text="5"
                    android:textSize="40sp"/>
                <Button
                    android:id="@+id/btn6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/colorNumbers"
                    android:text="6"
                    android:textSize="40sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                android:weightSum="1">
                <Button
                    android:id="@+id/btn1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/colorNumbers"
                    android:text="1"
                    android:textSize="40sp"/>
                <Button
                    android:id="@+id/btn2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/colorNumbers"
                    android:text="2"
                    android:textSize="40sp"/>
                <Button
                    android:id="@+id/btn3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/colorNumbers"
                    android:text="3"
                    android:textSize="40sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                android:weightSum="1">
                <Button
                    android:id="@+id/btn0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.66"
                    android:background="@color/colorNumbers"
                    android:text="0"
                    android:textSize="40sp"/>
                <Button
                    android:id="@+id/btnPunto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/colorNumbers"
                    android:text="."
                    android:textSize="40sp" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:orientation="vertical"
            android:weightSum="1" >

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:background="@color/colorOperations"
                android:text="/"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/btnMulti"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:background="@color/colorOperations"
                android:text="*"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/btnResta"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:background="@color/colorOperations"
                android:text="-"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/btnSuma"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:background="@color/colorOperations"
                android:text="+"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/btnResultado"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:background="@color/colorOperations"
                android:text="="
                android:textSize="40sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:orientation="vertical"
            android:weightSum="1" >
            <Button
                android:id="@+id/btnSin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="Sin"
                android:textSize="30sp"
                android:background="@color/colorGreen" />
            <Button
                android:id="@+id/btnCos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="Cos"
                android:textSize="30sp"
                android:background="@color/colorGreen" />
            <Button
                android:id="@+id/btnTan"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="Tan"
                android:textSize="30sp"
                android:background="@color/colorGreen" />
            <Button
                android:id="@+id/btnLn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="Ln"
                android:textSize="30sp"
                android:background="@color/colorGreen" />
            <Button
                android:id="@+id/btnRz"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="Rz"
                android:textSize="30sp"
                android:background="@color/colorGreen" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>